  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.modules.lang</depends>
  <project-components>
    <component>
      <implementation-class>com.appian.intellij.k.KProjectComponent</implementation-class>
    </component>
  </project-components>
  <extensions defaultExtensionNs="com.intellij">
    <fileTypeFactory implementation="com.appian.intellij.k.KFileTypeFactory"/>
    <lang.parserDefinition language="q" implementationClass="com.appian.intellij.k.KParserDefinition"/>
    <lang.syntaxHighlighterFactory language="q" implementationClass="com.appian.intellij.k.KSyntaxHighlighterFactory"/>
    <colorSettingsPage implementation="com.appian.intellij.k.KColorSettingsPage"/>
    <lang.commenter language="q" implementationClass="com.appian.intellij.k.KCommenter"/>
    <lang.braceMatcher language="q" implementationClass="com.appian.intellij.k.KPairedBraceMatcherAdapter"/>
    <lang.refactoringSupport language="q" implementationClass="com.appian.intellij.k.KRefactoringSupportProvider"/>
    <psi.referenceContributor implementation="com.appian.intellij.k.KReferenceContributor"/>
    <gotoSymbolContributor implementation="com.appian.intellij.k.KChooseByNameContributor"/>
    <lang.namesValidator language="q" implementationClass="com.appian.intellij.k.KNamesValidator"/>
    <lang.findUsagesProvider language="q" implementationClass="com.appian.intellij.k.KFindUsagesProvider"/>
    <lang.psiStructureViewFactory language="q"
                                  implementationClass="com.appian.intellij.k.struct.KStructureViewFactory"/>
    <completion.contributor language="q" implementationClass="com.appian.intellij.k.KCompletionContributor"/>
    <annotator language="q" implementationClass="com.appian.intellij.k.KUnresolvedIdsAnnotator"/>
    <annotator language="q" implementationClass="com.appian.intellij.k.KLambdaAnnotator"/>
    <enterBetweenBracesDelegate language="q" implementationClass="com.appian.intellij.k.KEnterBetweenBracesHandler"/>
    <lang.foldingBuilder language="q" implementationClass="com.appian.intellij.k.KFoldingBuilder"/>
    <highlightVisitor implementation="com.appian.intellij.k.KRainbowVisitor"/>
    <highlightVisitor implementation="com.appian.intellij.k.KUnusedVariableHighlightVisitor"/>
    <lang.documentationProvider language="q" implementationClass="com.appian.intellij.k.KDocumentationProvider"/>
    <spellchecker.support language="q" implementationClass="com.appian.intellij.k.KSpellcheckingStrategy"/>
    <typedHandler implementation="com.appian.intellij.k.KTypedHandler" id="q"/>
    <codeInsight.parameterInfo language="q" implementationClass="com.appian.intellij.k.KParameterInfoHandler"/>
    <applicationService
        serviceImplementation="com.appian.intellij.k.settings.KSettingsService"/>
    <applicationConfigurable groupId="language" displayName="Q" id="preferences.Q"
                             instance="com.appian.intellij.k.settings.KSettingsConfigurable"/>
    <renamePsiElementProcessor implementation="com.appian.intellij.k.KRenamePsiElementProcessor"/>
    <refactoring.elementListenerProvider implementation="com.appian.intellij.k.KRefactoringListenerProvider"/>
    <usageTypeProvider implementation="com.appian.intellij.k.KUsageTypeProvider"/>
    <renameHandler implementation="com.appian.intellij.k.KVariableInplaceRenameHandler"/>
  </extensions>
  <actions>

    <!-- editor popup menu customization -->
    <group id="com.appian.intellij.k.actions.KEvalActionGroup"
           class="com.appian.intellij.k.actions.KEvalActionGroup"
           text="Evaluate Selection On" popup="true">
      <add-to-group group-id="EditorPopupMenu" anchor="before" relative-to-action="EditorPopupMenu1"/>
    </group>
    <group id="com.appian.intellij.k.actions.KDefineElementActionGroup"
           class="com.appian.intellij.k.actions.KDefineElementActionGroup"
           text="Redefine On" popup="true">
      <add-to-group group-id="EditorPopupMenu" anchor="before" relative-to-action="EditorPopupMenu1"/>
    </group>
    <!-- end editor popup menu customization -->

    <!-- structure view popup menu customization -->
    <group id="com.appian.intellij.k.actions.KDefineNavigatableElementActionGroup"
           class="com.appian.intellij.k.actions.KDefineElementActionGroup"
           text="Redefine On" popup="true">
<!--      <separator/>-->
      <add-to-group group-id="StructureViewPopupMenu" anchor="after" relative-to-action="AddToFavorites"/>
    </group>
    <!-- end structure view popup menu customization -->

    <!-- keyboard shortcuts -->
    <action id="com.appian.intellij.k.actions.KEvalOnActiveServerAction"
            class="com.appian.intellij.k.actions.KEvalOnActiveServerAction" text="Evaluate Selection On Active Q Server"
            description="Run selection popup">
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt E"/>
    </action>
    <action id="com.appian.intellij.k.actions.KEvalPopupAction"
            class="com.appian.intellij.k.actions.KEvalPopupAction" text="Choose Q Server To Evaluate Selection">
      <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl alt E"/>
    </action>
    <action id="com.appian.intellij.k.actions.KDefineElementOnActiveServerAction"
            class="com.appian.intellij.k.actions.KDefineElementOnActiveServerAction" text="Redefine Function On Active Q Server"
            description="Run selection popup">
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt R"/>
    </action>
    <action id="com.appian.intellij.k.actions.KDefineElementPopupAction"
            class="com.appian.intellij.k.actions.KDefineElementPopupAction" text="Choose Q Server To Redefine Function">
      <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl alt R"/>
    </action>
    <!-- end keyboard shortcuts -->
  </actions>
</idea-plugin>
